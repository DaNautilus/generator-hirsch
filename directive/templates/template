/**
 * <%= capitalizedName %>
 * @namespace <%= modulePath %>
 */
(function() {
    'use strict';

    angular
        .module('<%= modulePath %>.<%= lowercaseName %>', [
            <%= modules %>
        ])
        .directive( '<%= prefix %><%= moduleName %><%= capitalizedName %>', <%= moduleName %><%= capitalizedName %>Directive );

    /**
     * @memberOf <%= modulePath %>
     * @namespace <%= moduleName %><%= capitalizedName %>
     *
     * @description
     * <%= description %>
     *
     * @example <<%= prefix %>-<%= lowerModuleName %>-<%= lowercaseName %>></<%= prefix %>-<%= lowerModuleName %>-<%= lowercaseName %>>
     */
    function <%= moduleName %><%= capitalizedName %>Directive() {
        return {
            restrict:         '<%= restrict %>',
            templateUrl:      '<%= templateUrl %>',
            controller:       <%= moduleName %><%= capitalizedName %>Controller,
            controllerAs:     '<%= lowerModuleName %><%= lowercaseName %>',
            bindToController: true // because the scope is isolated
        }
    }

    function <%= moduleName %><%= capitalizedName %>Controller(<%= dependencies %>) {
        var vm = this;

    }


}());
