/**
 * <%= capitalizedName %>
 * @namespace <%= moduleName %>
 */
(function() {
    'use strict';

    angular
        .module('<%= moduleName %>.<%= lowercaseName %>', [
            <%= modules %>
        ])
        .directive( '<%= prefix %><%= capitalizedName %>', <%= capitalizedName %>Directive );

    /**
     * @memberOf <%= moduleName %>
     * @namespace <%= capitalizedName %>
     *
     * @description
     * <%= description %>
     *
     * @example <<%= prefix %>-<%= lowercaseName %>></<%= prefix %>-<%= lowercaseName %>>
     */
    function <%= capitalizedName %>Directive() {
        return {
            restrict:         '<%= restrict %>',
            templateUrl:      '<%= templateUrl %>',
            controller:       <%= capitalizedName %>Controller,
            controllerAs:     '<%= lowercaseName %>',
            bindToController: true // because the scope is isolated
        }
    }

    function <%= capitalizedName %>Controller(<%= dependencies %>) {
        var vm = this;

    }


}());
